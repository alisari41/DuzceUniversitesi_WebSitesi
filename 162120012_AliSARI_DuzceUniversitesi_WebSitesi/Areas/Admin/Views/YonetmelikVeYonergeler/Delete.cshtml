    ViewData["Title"] = "Yönetmelik ve Yönergeleri Silme İşlemi";
}
<h3 style="font-weight:bold">Yönetmelik ve Yönergeleri silmek istediğinizden emin misiniz ?</h3>

<div style="margin-left:25px">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Kategori
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.YonetmelikVeYonergelerKategori.Kategori)
        </dd>
        <dt class="col-sm-3">
            Tarih
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Tarih)
        </dd>
        <dt class="col-sm-3">
            Açıklama
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
