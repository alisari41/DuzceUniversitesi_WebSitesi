@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.YonetmelikVeYonergeler

@{
    ViewData["Title"] = "Yönetmelik ve Yönerge Ekle";
}

<br />
<h2>Yönetmelik ve Yönerge Ekle</h2>
<hr />

<form asp-action="Create" asp-controller="YonetmelikVeYonergeler" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label col-md-3">Kategori</label>
        <div class="col-md-9">
            <select asp-for="YonetmelikVeYonergelerKategoriID" class="form-control text-info" asp-items="ViewBag.YonetmelikVeYonergelerKategoriID"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Tarih</label>
        <div class="col-md-9">
            <input type="date" asp-for="Tarih" class="form-control text-info" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Açıklama</label>
        <div class="col-md-9">
            <input type="text" asp-for="Aciklama" class="form-control text-info" />
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Link</label>
        <div class="col-md-9">
            <input type="text" asp-for="Link" class="form-control text-info" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-default bi bi-folder-plus guncellemebuton" style="margin-left: 5px; border: 2px solid #4db3ff;">
                &nbsp; Yönetmelik ve Yönerge Ekle
            </button>
        </div>
    </div>
</form>
<a asp-action="Index" asp-controller="YonetmelikVeYonergeler" class="btn btn-default fas fa-backward" style="color: green"> Geri Dön</a>