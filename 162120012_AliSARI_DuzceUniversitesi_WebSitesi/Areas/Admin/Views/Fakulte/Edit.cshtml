@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Fakulte

@{
    ViewData["Title"] = "Fakülte Adı Güncelle";
}

<h2>Fakülte Adı Güncelle</h2>
<hr />

<form asp-action="Edit" asp-controller="Fakulte" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label class="control-label col-md-3">Fakülte Adı</label>
        <div class="col-md-9">
            <input type="text" asp-for="FakulteAdi" class="form-control text-info" />
            <span asp-validation-for="FakulteAdi" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-default fas fa-edit guncellemebuton" style="margin-left: 5px; border: 2px solid #4db3ff;">Güncelle</button>
        </div>
    </div>
</form>
<a asp-action="Index" asp-controller="Fakulte" class="btn btn-default fas fa-backward" style="color: green"> Geri Dön</a>
