@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Fakulte

@{
    ViewData["Title"] = "Fakülte Ekle";
}

<br />
<h2>Fakülte Ekle</h2>
<hr />

<form asp-action="Create" asp-controller="Fakulte" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label col-md-3">Fakülte Adı</label>
        <div class="col-md-9">
            <input type="text" asp-for="FakulteAdi" class="form-control text-info" />
            <span asp-validation-for="FakulteAdi" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-default fa fa-university guncellemebuton" style="margin-left: 5px; border: 2px solid #4db3ff;">
                &nbsp;   Fakülte Ekle
            </button>
        </div>
    </div>

</form>

<a asp-action="Index" asp-controller="Fakulte" class="btn btn-default fas fa-backward" style="color: green"> Geri Dön</a>