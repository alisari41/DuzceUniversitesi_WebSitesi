@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Kullanici

@{
    ViewData["Title"] = "Kullanici Ekleme Paneli";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <form asp-action="Create" asp-controller="Kullanici" method="post" class="container-fluid px-3">
        <div class="row min-vh-100">
            <div class="col-md-5 col-lg-6 col-xl-4 px-lg-5 d-flex align-items-center">
                <div class="w-100 py-5">
                    <div class="text-center">
                        <img src="https://i.hizliresim.com/ppws5jq.jpg" alt="" style="max-width: 6rem;" class="img-fluid mb-4 rounded">
                        <h1 class="display-4 mb-3">Yönetici Kayıt OL</h1>
                    </div>
                    <div class="form-horizontal">
                        @* Bu satır "form-horizontal" olunca çalıştı yoksa çalışmıyor *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label> Adı</label>
                            <input type="text" asp-for="Ad" class="form-control text-info" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label> Soyadı</label>
                            <input type="text" asp-for="Soyad" class="form-control text-info" />
                            <span asp-validation-for="Soyad" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>E-mail Adresi</label>
                            <input type="text" asp-for="Email" class="form-control text-info" placeholder="alisari41@outlook.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <div class="form-group">

                            <label>Telefon Numarası</label>
                            <input type="text" asp-for="Telefon" class="form-control text-info" placeholder="05340829924"/>
                            <span asp-validation-for="Telefon" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <label>Şifre</label>
                                </div>

                            </div>

                            <input type="password" asp-for="Sifre" class="form-control text-info" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label>TC Kimlik Numaranız</label>
                            <input type="text" asp-for="TCKimlikNumarasi" class="form-control text-info" />
                            <span asp-validation-for="TCKimlikNumarasi" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <button class="btn btn-lg btn-block btn-outline-success mb-3" style="border: 2px solid green;">Kayıt OL</button>
                        </div>

                        @* <p class="text-center"><small class="text-muted text-center">Henüz bir hesabınız yok mu? <a href="kayitol.html">Kayıt ol</a>.</small></p>*@
                        <p class="text-center">
                            <small class="text-muted text-center">
                                <a href="/Admin/AdminLogin" style="font-weight:bold;text-decoration:none">  Zaten bir Yönetici hesabım var ve giriş yapmak istiyorum</a>.
                            </small>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-7 col-lg-6 col-xl-8 d-none d-lg-block">
                <div style="background-image: url(https://i.hizliresim.com/9mzqlh1.png);" class="bg-cover h-100 mr-n3"></div>
            </div>
        </div>
    </form>







</body>
</html>

