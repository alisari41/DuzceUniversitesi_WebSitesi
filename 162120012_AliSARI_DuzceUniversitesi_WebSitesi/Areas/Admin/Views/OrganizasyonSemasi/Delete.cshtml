@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.OrganizasyonSemasi

@{
    ViewData["Title"] = "Delete";
}

<h3 style="font-weight:bold">Organizasyon şemasını silmek istediğinizden emin misiniz ?</h3>

<div style="margin-left:25px">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Fakülte
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Fakulte.FakulteAdi) &nbsp;
        </dd>
        <dt class="col-sm-3">
            Enstitü
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Enstitu.EnstituAdi) &nbsp;
        </dd>
        <dt class="col-sm-3">
            Resim Url
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ResimUrl)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <a asp-action="Index" class="btn btn-default fa fa-backward detaylamabuton col-sm-2" style="margin-left: 2px; border: 2px solid green;"> Geri Dön</a>
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-default fas fa-trash-alt silmebuton col-sm-2" style="margin-left:98px;border: 2px solid red;">&nbsp; Sil</button>
        </div>
    </form>
</div>
<style>

    .col-sm-3 {
        margin-bottom: 10px;
        margin-left: 8px
    }

