@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.BolumveProgramSayilari

@{
    ViewData["Title"] = "Delete";
}

<h3 style="font-weight:bold">Bölüm program sayılarını silmek istediğinizden emin misiniz ?</h3>

<div style="margin-left:25px">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Program Türü
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.BolumveProgramSayilariKategori.Kategori)
        </dd>
        <dt class="col-sm-3">
            Fakülte
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Fakulte)
        </dd>
        <dt class="col-sm-3">
            Öğretim Türü
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.OgrenimTuru)
        </dd>
        <dt class="col-sm-3">
            Sayısı
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Sayisi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <a asp-action="Index" class="btn btn-default fa fa-backward detaylamabuton col-sm-2" style="margin-left: 2px; border: 2px solid green;"> Geri Dön</a>
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-default fas fa-trash-alt silmebuton col-sm-2" style="margin-left:98px;border: 2px solid red;">&nbsp; Sil</button>
        </div>
    </form>
</div>
