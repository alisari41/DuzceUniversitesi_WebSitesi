@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<_162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Dukkan>

@{
    ViewData["Title"] = "Dükkan";
}


<br />
<h2>Dükkan</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-danger bi bi-cart-plus-fill"> Dükkan'a malzeme Ekle</a>
</p>
<div class="table-responsive">
    <table class="table table-hover table-sm table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ResimUrl)
                </th>
                <th>
                    Başlık
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Renkler)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fiyat)
                </th>
                <th>Güncelle</th>
                <th>Detay</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ResimUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslık)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Renkler)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-default fas fa-edit   guncellemebuton" style="border: 2px solid green;"> Güncelle</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn  btn-default fas fa-info detaylamabuton" style="border: 2px solid #39ded8;"> Detay</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-default fas fa-trash-alt silmebuton" style="border: 2px solid red;"> Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .guncellemebuton {
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        color: #00ff21;
    }

        .guncellemebuton:hover {
            background-color: #851111;
            color: white;
        }

    .detaylamabuton {
        -webkit-transition-duration: 0.4s;
        color: #39ded8;
        transition-duration: 0.4s;
    }

        .detaylamabuton:hover {
            background-color: #1e4e4c;
            color: white;
        }

    .silmebuton {
        -webkit-transition-duration: 0.4s;
        color: red;
        transition-duration: 0.4s;
    }

        .silmebuton:hover {
            background-color: red;
            color: white;
        }
</style>