@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Dukkan

@{
    ViewData["Title"] = "Malzeme Bilgilerini Güncelle";
}

<h2>Malzeme Bilgilerini Güncelle</h2>
<hr />

<form asp-action="Edit" asp-controller="Dukkan" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label class="control-label col-md-3">Resim Url</label>
        <div class="col-md-9">
            <input type="text" asp-for="ResimUrl" class="form-control text-info" />
            <span asp-validation-for="ResimUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Başlık</label>
        <div class="col-md-9">
            <input type="text" asp-for="Baslık" class="form-control text-info" />
            <span asp-validation-for="Baslık" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Renkler</label>
        <div class="col-md-9">
            <input type="text" asp-for="Renkler" class="form-control text-info" />
            <span asp-validation-for="Renkler" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Fiyat</label>
        <div class="col-md-9">
            <input asp-for="Fiyat" class="form-control text-info" />
            <span asp-validation-for="Fiyat" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-default bi bi-shop guncellemebuton" style="margin-left: 5px; border: 2px solid #4db3ff;">
                &nbsp; Malzeme Bilgilerini Güncelle
            </button>
        </div>
    </div>
</form>

<a asp-action="Index" asp-controller="Dukkan" class="btn btn-default fas fa-backward" style="color: green"> Geri Dön</a>