                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama4)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama5)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResimUrl1)
