@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.KurumIcDegerlendirmeRaporlari

@{
    ViewData["Title"] = "Kurum İç Değerlendirme Raporları Ekle";
}
<br />
<h2>Kurum İç Değerlendirme Raporları Ekle</h2>
<hr />

<form asp-action="Create" asp-controller="KurumIcDegerlendirmeRaporlari" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group">
        <label class="control-label col-md-3">Enstitü</label>
        <div class="col-md-9">
            <select asp-for="EnstituID" class="form-control text-info" asp-items="ViewBag.EnstituID">
                <option value=""> Seçiniz</option>   @* Boş geçebilmek için yaptım *@
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Açıklama</label>
        <div class="col-md-9">
            <input type="text" asp-for="Aciklama" class="form-control text-info" />
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Link</label>
        <div class="col-md-9">
            <input type="text" asp-for="Link" class="form-control text-info" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Yıl Ayrıntıları</label>
        <div class="col-md-9">
            <input type="text" asp-for="YılAyrintilari" class="form-control text-info" />
            <span asp-validation-for="YılAyrintilari" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-default bi bi-folder-plus guncellemebuton" style="margin-left: 5px; border: 2px solid #4db3ff;">
                &nbsp; Kurum İç Değerlendirme Raporları Ekle
            </button>
        </div>
    </div>
</form>
<a asp-action="Index" asp-controller="KurumIcDegerlendirmeRaporlari" class="btn btn-default fas fa-backward" style="color: green"> Geri Dön</a>
