    ViewData["Title"] = "Kurum İç Değerlendirme Raporları Silme İşlemleri";
}

<h3 style="font-weight:bold">Kurum İç Değerlendirme Raporlarını silmek istediğinizden emin misiniz ?</h3>

<div style="margin-left:25px">
    <hr />
    <dl class="row">

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Enstitu)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Enstitu.EnstituAdi)
        </dd>
        <dt class="col-sm-3">
            Açıklama
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class="col-sm-3">
