        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.FotografAdı) &nbsp;
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-8">
