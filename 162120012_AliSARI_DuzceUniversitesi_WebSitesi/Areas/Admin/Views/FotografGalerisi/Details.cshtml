    ViewData["Title"] = "Fotoğraf Detayları";
}

<h2> Fotoğraf Detayları</h2>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FotografAdı)
