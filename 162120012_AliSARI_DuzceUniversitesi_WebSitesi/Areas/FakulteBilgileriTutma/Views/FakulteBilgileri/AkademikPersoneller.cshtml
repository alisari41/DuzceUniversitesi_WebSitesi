@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<_162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Personel>

@{

    var fakulte = (_162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Fakulte)ViewBag.Fakulteler;
    var yonetimler = (_162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Yonetim)ViewBag.Yonetimler;
}
<html>
<head>

    <link rel="stylesheet" type="text/css" href="~/css/FakulteYonetimKisiler.css?Version=1" />
</head>
<body>
    <h2 id="genelbilgilerbaslik1">Akademik Personel</h2>
    <div class="row">

        @{
            foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="card mb-4" id="rektoryrdcard">
                        <a href="@item.FotografUrl" target="_blank">
                            <img class="card-img-top " width="100%" src="@item.FotografUrl" alt="Card image cap" height="300">
                        </a>

                        <div class="card-body">
                            <p style="text-align:center">
                                <a asp-action="PersonelDetay" asp-route-id="@item.ID" asp-route-fakulteid="@fakulte.ID" class="rektoryrdtitle">@item.Ad @item.Soyad</a>
                                @*@Html.ActionLink(item.Ad + item.Soyad, "PersonelDetay", new { id = item.ID, fakulteid = fakulte.ID }, new { @class = "rektoryrdtitle" })*@
                            </p>
                            <p>
                                @Html.DisplayFor(modelItem => item.Unvan)
                            </p>
                            <p>
                                <a href="@item.PersonelLink" target="_blank">Akademik Düzce&#8217;deki Personelin Sayfası</a>
                            </p>
                        </div>
                    </div>
                </div>

            }
        }
    </div>


    <br /><br /><br />
</body>
</html>