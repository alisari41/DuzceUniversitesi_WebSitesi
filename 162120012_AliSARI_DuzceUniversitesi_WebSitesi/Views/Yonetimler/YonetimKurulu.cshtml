@model IEnumerable<_162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Yonetim>

@{
    ViewData["Title"] = "Yönetim Kurulu";
}
<html>
<head>

</head>
<body>
    <div class="ustkisim  row">
        <div class="col-sm-6 ">
            <div class="baslik">Düzce Üniversitesi</div>
            <ol class="breadcrumb icerik">
                <li class="breadcrumb-item ">
                    <a href="/" class="icerikilk">Anasayfa</a>
                </li>
                <li class="breadcrumb-item active">
                    Yönetim Kurulu
                </li>
            </ol>
        </div>

        <div class="col-sm-6" style="text-align:right">
            <div>&nbsp;</div>
            <i class="fa fa-search"></i>
            <input class="arama" type="text" value="" placeholder="Arama">
        </div>
    </div>
    <div class="container-fluid" id="bodykismi">
        <h2 id="baslik1">Yönetim Kurulu</h2>

        <div class="table-responsive">
            <table class="table table-hover table-sm table-bordered">
                @{
                    var sayi = 0;

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if ((item.YonetimKategori.Gorevi.IndexOf("Dekan", 0) >= 1) ||
                                (item.YonetimKategori.Gorevi == "Rektör") ||
                                (item.YonetimKategori.Gorevi == "Rektör Yardımcısı"))
                            {
                                sayi = sayi + 1;
                                <tr>
                                    <td>
                                        @sayi
                                    </td>
                                    <td>
                                        @Html.ActionLink(item.Unvan + item.Ad + item.Soyad, "YonetimdekiKisilerDetay", new { id = item.ID }, new { @class = "butcelink" })
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.YonetimKategori.Gorevi)
                                    </td>

                                </tr>
                            }



                        }
                    </tbody>
                }
            </table>

        </div>
    </div>


</body>
</html>
