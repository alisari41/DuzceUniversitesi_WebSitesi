            function reloadPage() {
                window.location.reload()
            }
        </script>
        <script type="text/javascript">
            $.get("/Home/Duyurular/".done(function (data) {
                placeHolderElement.find('.modal').modal('hide')
                location.reload();
            })
        </script>*@
</body>
</html>