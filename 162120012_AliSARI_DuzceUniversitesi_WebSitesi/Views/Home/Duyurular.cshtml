@model IEnumerable<_162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models.Duyurular>

@{
    ViewData["Title"] = "Duyurular";
}

<html>
<head>


</head>
<body>
    <div class="ustkisim  row">
        <div class="col-sm-6 ">
            <div class="baslik">Düzce Üniversitesi</div>
            <ol class="breadcrumb icerik">
                <li class="breadcrumb-item ">
                    <a href="/" class="icerikilk">Anasayfa</a>
                </li>
                <li class="breadcrumb-item active">
                    Duyurular
                </li>
            </ol>
        </div>

        <div class="col-sm-6" style="text-align:right">
            <div>&nbsp;</div>
            <i class="fa fa-search"></i>
            <input class="arama" type="text" value="" placeholder="Arama">
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="container-fluid" id="bodykismi">

        <ul class="nav nav-tabs nav-justified" role="tablist">

            <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#link1" style="border-width:5px;">Duyurular</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#link2" style="border-width:5px;">Etkinlikler</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#link3" style="border-width:5px;">Haberler</a></li>



        </ul>

        <div class="tab-content">

            <div id="link1" class=" tab-pane  active ">
                <br><br>
                <div class="row">

                    @{
                        foreach (var item in Model)
                        {    /*Duyurular*/

                            @if ((item.DuyuruKategori.IndexOf("Duy", 0) >= 0) || (item.DuyuruKategori.IndexOf("duy", 0) >= 0) || (item.DuyuruKategori.IndexOf("DUY", 0) >= 0))
                            {// Kategorisi Duyuru İse sadece Duyuruları Listele

                                <div class="col-sm-6 col-md-3">
                                    <div class="card mb-4">
                                        <div class="card-header" style="height:60px; display:table;">
                                            <p style=" display: table-cell; vertical-align: middle; text-align: center;">
                                                @item.Baslik
                                            </p>
                                        </div>
                                        <img class="card-img-top " width="100%" src="@item.ResimUrl1" alt="Card image cap" height="300">

                                        <div class="card-body ">
                                            <div class="card-body">
                                                <h4 class="card-title">@item.Tarih.ToString("d")</h4>
                                                <a class="btn btn-default fas fa-edit   detaylar" style="border: 3px solid rgb(77 254 254);" href="" target="_self" data-toggle="modal" data-target="#duyurular-@item.ID">
                                                    Detaylar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>


            <div id="link2" class="tab-pane fade ">
                <br><br>
                <div class="row">

                    @{
                        foreach (var item in Model)
                        {    /*Etkinlik*/

                            @if ((item.DuyuruKategori.IndexOf("Etk", 0) >= 0) || (item.DuyuruKategori.IndexOf("etk", 0) >= 0) || (item.DuyuruKategori.IndexOf("ETK", 0) >= 0))
                            {// Kategorisi Etkinlik İse sadece Duyuruları Listele

                                <div class="col-sm-6 col-md-4">
                                    <div class="card mb-4">
                                        <div class="card-header" style="height:100px; display:table;">
                                            <p style=" display: table-cell; vertical-align: middle; text-align: center;">
                                                @item.Baslik
                                            </p>
                                        </div>
                                        <img class="card-img-top " width="100%" src="@item.ResimUrl1" alt="Card image cap" height="300">

                                        <div class="card-body ">
                                            <div class="card-body">
                                                <h4 class="card-title">@item.Tarih.ToString("d")</h4>
                                                <a class="btn btn-default fas fa-edit   detaylar" style="border: 3px solid rgb(77 254 254);" href="" target="_self" data-toggle="modal" data-target="#duyurular-@item.ID">
                                                    Detaylar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>


            <div id="link3" class="tab-pane fade ">
                <br><br>
                <div class="row">

                    @{
                        foreach (var item in Model)
                        {    /*Haberler*/

                            @if ((item.DuyuruKategori.IndexOf("Hab", 0) >= 0) || (item.DuyuruKategori.IndexOf("hab", 0) >= 0) || (item.DuyuruKategori.IndexOf("HAB", 0) >= 0))
                            {// Kategorisi Haber İse sadece Duyuruları Listele

                                <div class="col-sm-6 col-md-4">
                                    <div class="card mb-4">
                                        <div class="card-header" style="height:100px; display:table;">
                                            <p style=" display: table-cell; vertical-align: middle; text-align: center;">
                                                @item.Baslik
                                            </p>
                                        </div>
                                        <img class="card-img-top " width="100%" src="@item.ResimUrl1" alt="Card image cap" height="300">

                                        <div class="card-body ">
                                            <div class="card-body">
                                                <h4 class="card-title">@item.Tarih.ToString("d")</h4>
                                                <a class="btn btn-default fas fa-edit   detaylar" style="border: 3px solid rgb(77 254 254);" href="" target="_self" data-toggle="modal" data-target="#duyurular-@item.ID">
                                                    Detaylar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>

            </div>







        </div>


        <br />
        <br />


    </div>
    @foreach (var item in Model)
    {
        <div class="modal fade bd-example-modal-lg" id="duyurular-@item.ID">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable model-xl">
                @*pencerenin içersindeki yapıyı olusturur*@
                <div class="modal-content">
                    @*başlık*@
                    <div class="modal-header " style="display:table;">
                        <div class="row " style=" display: table-cell; vertical-align: middle; text-align: center; align-items:center">
                            <div class="col-md-12 w-100">
                                <h6 class="modal-title w-100"> @item.Tarih.ToString("d") </h6>
                            </div>
                            <div class="col-md-12 w-100">
                                <h4 class="modal-title  w-100"> @item.Baslik </h4>
                            </div>
                        </div>
                        @*<button type="button" onclick="reloadPage()" class="close" data-dismiss="modal" data-url="@Url.Action("Duyurular")">&times;</button>*@
                        @*<a href=""  target="_blank" class="close" data-dismiss="modal" >&times;</a>*@

                    </div>

                    @*<gövde>*@
                    @*<model yazınca çalışmaz bir harf bile önemli>*@
                    <div class="modal-body">

                        <div id="carouseldeneme" class="carousel slide  " data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active" data-interval="10000">
                                    <img src="@item.ResimUrl1" width="100%" height="450px;">
                                </div>
                                @if (@item.ResimUrl2 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl2" width="100%" height="450px;">
                                    </div>
                                }
                                @if (@item.ResimUrl3 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl3" width="100%" height="450px;">
                                    </div>
                                }
                                @if (@item.ResimUrl4 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl4" width="100%" height="450px;">
                                    </div>
                                }
                                @if (@item.ResimUrl5 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl5" width="100%" height="450px;">
                                    </div>
                                }
                                @if (@item.ResimUrl6 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl6" width="100%" height="450px;">
                                    </div>
                                }
                                @if (@item.ResimUrl7 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl7" width="100%" height="450px;">
                                    </div>
                                }
                                @if (@item.ResimUrl8 != null)
                                {
                                    <div class="carousel-item">
                                        <img src="@item.ResimUrl8" width="100%" height="450px;">
                                    </div>
                                }
                            </div>


                            @if ((@item.ResimUrl2 != null) || (@item.ResimUrl3 != null) || (@item.ResimUrl4 != null)
                               || (@item.ResimUrl5 != null) || (@item.ResimUrl6 != null) || (@item.ResimUrl7 != null)
                                || (@item.ResimUrl8 != null))
                            {
                                <a class="carousel-control-prev" href="#carouseldeneme" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>

                                <a class="carousel-control-next" href="#carouseldeneme" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            }
                        </div>







                        <br>
                        @*<h6>@item.Tarih.ToString("d")</h6>*@
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Icerik</p><br />
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Aciklama1</p><br />
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Aciklama2</p><br />
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Aciklama3</p><br />
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Aciklama4</p><br />
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Aciklama5</p><br />
                        <p style="text-align: justify; line-height: 150%; font-family: Raleway;"> @item.Aciklama6</p><br />
                    </div>
                    @*<!en alt>*@
                    <div class="modal-footer">
                        <button type="button" onclick="reloadPage()" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
