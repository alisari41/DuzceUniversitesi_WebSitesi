@page "/blazoradmin/DeleteSayilar/{CurrentID}"

@using _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models;
@using Microsoft.AspNetCore.Components.Web
@inject SayilarService objSayilarService
@inject NavigationManager NavigationManager

<h2>Sayıları Sil</h2>
<hr />
<h3 style="font-weight:bold">Bu girilen sayıları silmek istediğinizden emin misiniz ?</h3>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label>ID:</label>
            <label>@objsayilar.ID</label>
        </div>
        <div class="form-group">
            <label>Fakulte Sayısı:</label>
            <label>@objsayilar.FakulteSayisi</label>
        </div>
        <div class="form-group">
            <label>Enstitu Sayısı:</label>
            <label>@objsayilar.EnstituSayisi</label>
        </div>
        <div class="form-group">
            <label>Yüksek Okul Sayısı:</label>
            <label>@objsayilar.YuksekOkulSayisi</label>
        </div>
        <div class="form-group">
            <label>Meslek Yüksek Okul Sayısı:</label>
            <label>@objsayilar.MeslekYuksekOkulSayisi</label>
        </div>
        <div class="form-group">
            <label>Lisans Programı Sayısı:</label>
            <label>@objsayilar.LisansProgramiSayisi</label>
        </div>
        <div class="form-group">
            <label>Lisans Üstü Program Sayısı:</label>
            <label>@objsayilar.LisansUstuProgramSayisi</label>
        </div>
        <div class="form-group">
            <label>Uygulama Araştırma Merkezi Sayısı:</label>
            <label>@objsayilar.UygulamaArastirmaMerkeziSayisi</label>
        </div>
        <div class="form-group">
            <label>Kordinatorlük Sayısı:</label>
            <label>@objsayilar.KordinatorlukSayisi</label>
        </div>
        <div class="form-group">
            <label> Tübitak Proje Sayısı:</label>
            <label>@objsayilar.TubitakProjeSayisi</label>
        </div>
        <div class="form-group">
            <label> BAP Projesi Sayısı:</label>
            <label>@objsayilar.BAPProjesiSayisi</label>
        </div>
        <div class="form-group">
            <label>Sponsorlu Proje Sayısı:</label>
            <label>@objsayilar.SponsorluProjeSayisi</label>
        </div>
        <div class="form-group">
            <label>Patent Sayısı:</label>
            <label>@objsayilar.PatentSayisi</label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-danger" @onclick="@DeleteSayilarr" value="Sil" />
            <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string CurrentID { get; set; }

    Sayilar objsayilar = new Sayilar();

    protected override async Task OnInitializedAsync()
    {
        objsayilar = await Task.Run(() => objSayilarService.GetSayilarById(Convert.ToInt32(CurrentID)));
    }

    protected void DeleteSayilarr()
    {
        objSayilarService.DeleteSayilar(objsayilar);
        NavigationManager.NavigateTo("/blazoradmin/Sayilarr");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("/blazoradmin/Sayilarr");
    }
}
