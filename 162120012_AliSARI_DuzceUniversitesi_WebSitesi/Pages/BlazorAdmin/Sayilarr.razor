@page "/blazoradmin/Sayilarr"

@using _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models;
@using Microsoft.AspNetCore.Components.Web
@inject SayilarService objSayilarService
@using Microsoft.AspNetCore.Components.Routing

<NavLink class="nav-link" href="/blazoradmin/AddSayilar">
    <span class="oi oi-plus" aria-hidden="true"></span> Ekle

</NavLink>

<h1>Sayılar</h1>
@if (objsayilar == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-responsive container">
        <table class="table table-hover table-sm table-bordered">
            <thead>
                <tr>
                    <th>
                        Fakulte Sayısı
                    </th>
                    <th>
                        Enstitu Sayısı
                    </th>
                    <th>
                        Yüksek Okul Sayısı
                    </th>
                    <th>
                        Meslek Yüksek Okul Sayısı
                    </th>
                    <th>
                        Lisans Programı Sayısı
                    </th>
                    <th>
                        Lisans Üstü Program Sayısı
                    </th>
                    <th>
                        Uygulama Araştırma Merkezi Sayısı
                    </th>
                    <th>
                        Kordinatorlük Sayısı
                    </th>
                    <th>
                        Tübitak Proje Sayısı
                    </th>
                    <th>
                        BAP Projesi Sayısı
                    </th>
                    <th>
                        Sponsorlu Proje Sayısı
                    </th>
                    <th>
                        Patent Sayısı
                    </th>

                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in objsayilar)
                {
                    <tr>
                        <td>
                            @emp.FakulteSayisi
                        </td>
                        <td>
                            @emp.EnstituSayisi
                        </td>
                        <td>
                            @emp.YuksekOkulSayisi
                        </td>
                        <td>
                            @emp.MeslekYuksekOkulSayisi
                        </td>
                        <td>
                            @emp.LisansProgramiSayisi
                        </td>
                        <td>
                            @emp.LisansUstuProgramSayisi
                        </td>
                        <td>
                            @emp.UygulamaArastirmaMerkeziSayisi
                        </td>
                        <td>
                            @emp.KordinatorlukSayisi
                        </td>
                        <td>
                            @emp.TubitakProjeSayisi
                        </td>
                        <td>
                            @emp.BAPProjesiSayisi
                        </td>
                        <td>
                            @emp.SponsorluProjeSayisi
                        </td>
                        <td>
                            @emp.PatentSayisi
                        </td>


                        <td>
                            <a class="nav-link" href="/blazoradmin/EditSayilar/@emp.ID">
                                <span class="oi oi-pencil" aria-hidden="true"></span>Güncelle
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" href="/blazoradmin/DeleteSayilar/@emp.ID">
                                <span class="oi oi-trash" aria-hidden="true"></span>Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@code {
    List<Sayilar> objsayilar;
    protected override async Task OnInitializedAsync()
    {
        objsayilar = await Task.Run(() => objSayilarService.GetSayilar());
    }
}
