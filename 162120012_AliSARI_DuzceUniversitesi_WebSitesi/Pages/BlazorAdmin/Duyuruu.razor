@page "/blazoradmin/Duyuruu"
@page "/blazoradmin"

@using _162120012_AliSARI_DuzceUniversitesi_WebSitesi.Models;
@using Microsoft.AspNetCore.Components.Web
@inject DuyuruService objDyuruService
@using Microsoft.AspNetCore.Components.Routing

<NavLink class="nav-link" href="/blazoradmin/AddDuyuru">
    <span class="oi oi-plus" aria-hidden="true"></span> Ekle

</NavLink>

<h1>Duyurular</h1>
@if (objduyuru == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-responsive container">
        <table class="table table-hover table-sm table-bordered">
            <thead>
                <tr>
                    <th>
                        Duyuru Kategori
                    </th>
                    <th>
                        Başlık
                    </th>
                    <th>
                        İçerik
                    </th>
                    <th>
                        Tarih
                    </th>
                    <th>
                        Aktif Mi
                    </th>
                    <th>
                        Aciklama1
                    </th>
                    <th>
                        Aciklama2
                    </th>
                    <th>
                        Aciklama3
                    </th>
                    <th>
                        Aciklama4
                    </th>
                    <th>
                        Aciklama5
                    </th>
                    <th>
                        Aciklama6
                    </th>
                    <th>
                        ResimUrl1
                    </th>
                    <th>
                        ResimUrl2
                    </th>
                    <th>
                        ResimUrl3
                    </th>
                    <th>
                        ResimUrl4
                    </th>
                    <th>
                        ResimUrl5
                    </th>
                    <th>
                        ResimUrl6
                    </th>
                    <th>
                        ResimUrl7
                    </th>
                    <th>
                        ResimUrl8
                    </th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in objduyuru)
                {
                    <tr>
                        <td>
                            @emp.DuyuruKategori
                        </td>
                        <td>
                            @emp.Baslik
                        </td>
                        <td>
                            @emp.Icerik
                        </td>
                        <td>
                            @emp.Tarih
                        </td>
                        <td>
                            @emp.AktifMi
                        </td>
                        <td>
                            @emp.Aciklama1
                        </td>
                        <td>
                            @emp.Aciklama2
                        </td>
                        <td>
                            @emp.Aciklama3
                        </td>
                        <td>
                            @emp.Aciklama4
                        </td>
                        <td>
                            @emp.Aciklama5
                        </td>
                        <td>
                            @emp.Aciklama6
                        </td>
                        <td>
                            @emp.ResimUrl1
                        </td>
                        <td>
                            @emp.ResimUrl2
                        </td>
                        <td>
                            @emp.ResimUrl3
                        </td>
                        <td>
                            @emp.ResimUrl4
                        </td>
                        <td>
                            @emp.ResimUrl5
                        </td>
                        <td>
                            @emp.ResimUrl6
                        </td>
                        <td>
                            @emp.ResimUrl7
                        </td>
                        <td>
                            @emp.ResimUrl8
                        </td>
                        <td>
                            <a class="nav-link" href="/blazoradmin/EditDuyuru/@emp.ID">
                                <span class="oi oi-pencil" aria-hidden="true"></span>Güncelle
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" href="/blazoradmin/DeleteDuyuru/@emp.ID">
                                <span class="oi oi-trash" aria-hidden="true"></span>Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@code {
    List<Duyurular> objduyuru;
    protected override async Task OnInitializedAsync()
    {
        objduyuru = await Task.Run(() => objDyuruService.GetDuyuru());
    }
}
